<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    <context-param>
        <param-name>LogFilesPath</param-name>
        <param-value>/Logfiles/LabEquipment.log</param-value>
    </context-param>
    <context-param>
        <!-- Logging level to use and can be any of: ALL, FINEST, FINER, FINE, INFO, CONFIG, WARNING, SEVERE, OFF -->
        <param-name>LogLevel</param-name>
        <param-value>INFO</param-value>
    </context-param>
    <context-param>
        <param-name>XmlConfigPropertiesPath</param-name>
        <param-value>/WEB-INF/ConfigProperties.xml</param-value>
    </context-param>
    <context-param>
        <param-name>XmlEquipmentConfigPath</param-name>
        <param-value>/WEB-INF/EquipmentConfig.xml</param-value>
    </context-param>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
