<!--<!DOCTYPE labConfiguration SYSTEM "LabConfiguration.dtd">-->
<labConfiguration title="Radioactivity 1" version="4.0">
    <navmenuPhoto>
        <image>http://localhost:8080/RadioactivityLabServer/resources/img/radioactivity1.png</image>
    </navmenuPhoto>
    <labCamera>
        <url />
    </labCamera>
    <labInfo>
        <text />
        <url />
    </labInfo>
    <configuration>
        <setup id="RadioactivityVsTime">
            <name>Radioactivity over Time</name>
            <description>
                <p>Measure radioactivity over time at a fixed distance from the source.</p>
            </description>
            <distance>20</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <setup id="RadioactivityVsDistance">
            <name>Radioactivity versus Distance</name>
            <description>
                <p>Measure radioactivity at various distances from the source.</p>
            </description>
            <distance>15,20,25,35,60</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <setup id="SimActivityVsTime">
            <name>Radioactivity over Time (Simulated)</name>
            <description>
                <p>Measure radioactivity over time at a fixed distance from a simulated source.</p>
            </description>
            <distance>20</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <setup id="SimActivityVsDistance">
            <name>Radioactivity versus Distance (Simulated)</name>
            <description>
                <p>Measure radioactivity at various distances from a simulated source.</p>
            </description>
            <distance>15,20,25,35,60</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <setup id="SimActivityVsTimeNoDelay">
            <name>Radioactivity over Time (Simulated - No delays)</name>
            <description>
                <p>Measure radioactivity over time at a fixed distance from a simulated source. Equipment operation delays are not included.</p>
            </description>
            <distance>20</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <setup id="SimActivityVsDistanceNoDelay">
            <name>Radioactivity versus Distance (Simulated - No delays)</name>
            <description>
                <p>Measure radioactivity at various distances from a simulated source. Equipment operation delays are not included.</p>
            </description>
            <distance>15,20,25,35,60</distance>
            <duration>5</duration>
            <repeat>3</repeat>
        </setup>
        <sources default="Strontium-90">
            <source>
                <name>None</name>
            </source>
            <source>
                <name>Strontium-90</name>
            </source>
        </sources>
        <absorbers default="None">
            <absorber>
                <name>None</name>
            </absorber>
        </absorbers>
        <distances>
            <minimum>15</minimum>
            <maximum>95</maximum>
            <stepsize>5</stepsize>
        </distances>
    </configuration>
    <validation>
        <vdnDistance>
            <minimum>14</minimum>
            <maximum>95</maximum>
        </vdnDistance>
        <vdnDuration>
            <minimum>1</minimum>
            <maximum>10</maximum>
        </vdnDuration>
        <vdnRepeat>
            <minimum>1</minimum>
            <maximum>10</maximum>
        </vdnRepeat>
        <vdnTotaltime>
            <minimum>1</minimum>
            <maximum>900</maximum>
        </vdnTotaltime>
    </validation>
    <experimentSpecification>
        <setupName />
        <setupId />
        <sourceName />
        <absorberName />
        <distance />
        <duration />
        <repeat />
    </experimentSpecification>
    <experimentResult>
        <timestamp />
        <title />
        <version />
        <experimentId />
        <sbName />
        <unitId />
        <setupName />
        <setupId />
        <sourceName />
        <absorberName />
        <distance />
        <duration />
        <repeat />
        <dataType />
        <dataVector />
    </experimentResult>
</labConfiguration>
